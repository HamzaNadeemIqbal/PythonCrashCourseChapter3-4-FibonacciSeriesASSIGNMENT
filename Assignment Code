foods = ("Chips", "Ice Cream", 'Cake', 'Bread', "Juice")
print("Foods are")
for foods in foods:
    print(foods)

print("\n")

#Projecteuler.net Fibbonaci series
first= 1
second = 2
third = 2
TotalSum = 0
while third < 4000000:
      if third % 2 == 0:
         TotalSum += third
      third = first + second
      first = second
      second = third
print(TotalSum)
