#3-4 Guest List:
GuestList=['Ali','Saad','Sarmad']
for guest in GuestList:
    print(guest+" is invited to my party.")

print("\n")
#3-5 Changing Guest List:
GuestList=['Ali','Saad','Sarmad']
GuestList.insert(GuestList.index('Saad'),'Taha')
removed=GuestList.pop(GuestList.index('Saad'))
for guest in GuestList:
    print(guest+" is invited to my party.")

print(removed+" could not make to the party")
print("\n")


#3-6. More Guests:
GuestList=['Ali','Saad','Sarmad']
print("√è found a Bigger Table")
GuestList.insert(0,'Dawood')
GuestList.insert((len(GuestList)/2).__int__(),'Shahab')
GuestList.append('Taha')
for guest in GuestList:
    print(guest+" is invited to my party.")

print("\n")

#3-8.Seeing the World:
Places = ['Saudi Arabia','China','England','Australia','Dubai']
print(Places)
print(sorted(Places))
print(Places)
Places.reverse()
print(Places)
Places.reverse()
print(Places)
Places.sort()
print(Places)
Places.sort(reverse=True)
print(Places)

print("\n")

